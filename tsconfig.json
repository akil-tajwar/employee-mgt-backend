{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",

    "rootDir": ".",
    "outDir": "./dist",

    "moduleResolution": "node",
    "types": ["node"],

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "drizzle.config.ts"]
}
